<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/component-install.dtd">
<extension type="component" version="3.0" method="upgrade">
	<name>com_importer</name>
	<creationDate>Jun 2015</creationDate>
	<author>TTPL</author>
	<authorEmail>TTPL</authorEmail>
	<authorUrl>contact@techjoomla.com</authorUrl>
	<version>1.0 Beta2</version>
	<description>Bulk Import Tool</description>

	<install> <!-- Runs on install -->
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>

	<files folder="site">
		<folder>controllers</folder>
		<folder>models</folder>
		<folder>assets</folder>
		<folder>helpers</folder>
		<folder>views</folder>
		<folder>adapters</folder>
		<folder>images</folder>
		<filename>importer.php</filename>
		<filename>controller.php</filename>
		<filename>index.html</filename>
	</files>
	<languages folder="site/language">
		<language tag="en-GB">en-GB/en-GB.com_importer.ini</language>
	</languages>

	<administration>
		<menu>Importer</menu>

		<files folder="admin">
			<folder>sql</folder>
		</files>

	</administration>
</extension>
